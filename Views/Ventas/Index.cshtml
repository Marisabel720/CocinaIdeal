@model IEnumerable<CocinaIdeal.Models.Venta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class=" btn btn-success" asp-action="Create">Crear Nueva Venta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroRecibo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsPagado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroTicketReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cocina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroRecibo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsPagado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroTicketReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cocina.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Info)
            </td>
            <td>
                <a class=" btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class=" btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Recibo</a> |
                    <a class=" btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
